{% extends 'base.html.twig' %}

{% block title %}{{ company.name }} - Research Reports{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ company.name }} - Research Reports</h1>
        <div>
            <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Company
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <!-- Existing Reports -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Available Research Reports</h5>
                </div>
                <div class="card-body">
                    {% if reports is empty %}
                        <p class="text-center text-muted my-4">No research reports available for this company yet.</p>
                    {% else %}
                        <div class="list-group">
                            {% for report in reports %}
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">{{ report.title }}</h5>
                                        <small>{{ report.createdAt|date('Y-m-d') }}</small>
                                    </div>
                                    <p class="mb-1">{{ report.executiveSummary|u.truncate(150, '...') }}</p>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small class="text-muted">
                                            Type: <span class="badge bg-secondary">{{ report.reportType }}</span>
                                            {% if report.generatedBy %}
                                                | Generated by: {{ report.generatedBy }}
                                            {% endif %}
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('report_show', {'id': report.id}) }}" class="btn btn-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <button class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                                <span class="visually-hidden">Export</span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="{{ path('report_export_pdf', {'id': report.id}) }}">Export as PDF</a></li>
                                                <li><a class="dropdown-item" href="{{ path('report_export_excel', {'id': report.id}) }}">Export as Excel</a></li>
                                                <li><a class="dropdown-item" href="{{ path('report_export_word', {'id': report.id}) }}">Export as Word</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Generate New Report -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Generate New Report</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.reportType) }}
                        {{ form_widget(form.reportType) }}
                        {{ form_errors(form.reportType) }}
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" id="generate_with_ai" name="generate_with_ai" value="yes" checked>
                        <label class="form-check-label" for="generate_with_ai">
                            Use AI to generate report content
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-file-alt"></i> Generate Report
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Report Types Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Report Types</h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="reportTypesAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingComprehensive">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseComprehensive" aria-expanded="false" aria-controls="collapseComprehensive">
                                    Comprehensive Analysis
                                </button>
                            </h2>
                            <div id="collapseComprehensive" class="accordion-collapse collapse" aria-labelledby="headingComprehensive" data-bs-parent="#reportTypesAccordion">
                                <div class="accordion-body">
                                    <p><small>A full in-depth analysis covering all aspects of the company, including financial performance, market position, leadership, and future outlook.</small></p>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingFinancial">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFinancial" aria-expanded="false" aria-controls="collapseFinancial">
                                    Financial Analysis
                                </button>
                            </h2>
                            <div id="collapseFinancial" class="accordion-collapse collapse" aria-labelledby="headingFinancial" data-bs-parent="#reportTypesAccordion">
                                <div class="accordion-body">
                                    <p><small>Focuses on financial performance, key ratios, earnings, and financial outlook. Ideal for investment decisions.</small></p>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingCompetitive">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCompetitive" aria-expanded="false" aria-controls="collapseCompetitive">
                                    Competitive Landscape
                                </button>
                            </h2>
                            <div id="collapseCompetitive" class="accordion-collapse collapse" aria-labelledby="headingCompetitive" data-bs-parent="#reportTypesAccordion">
                                <div class="accordion-body">
                                    <p><small>Analyzes the company's position relative to competitors, market share, competitive advantages, and industry trends.</small></p>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingExecutive">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExecutive" aria-expanded="false" aria-controls="collapseExecutive">
                                    Executive Summary
                                </button>
                            </h2>
                            <div id="collapseExecutive" class="accordion-collapse collapse" aria-labelledby="headingExecutive" data-bs-parent="#reportTypesAccordion">
                                <div class="accordion-body">
                                    <p><small>Brief overview of the company's performance, key metrics, and outlook. Perfect for quick review.</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add any additional JavaScript functionality here
    });
</script>
{% endblock %}
{% endblock %}
